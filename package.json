  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm:dev:client\" \"npm:dev:server\"",
    "dev:client": "vite",
    "dev:server": "bun run --watch bun-server.ts",
    "lint": "eslint . --ext .ts,.js --cache --fix",
    "check-types": "tsc --noEmit",
    "db:generate": "bun run scripts/generate-types.ts",
    "db:migrate": "bun run src/db/migrator.ts up",
    "db:seed": "bun run src/db/seed.ts",
    "migrate": "bun run db:migrate && bun run db:generate && bun run db:seed",
    "migrate:down": "bun run db/migrator.ts down"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@types/bun": "^1.2.18",
    "@types/node": "^22.8.6",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "eslint": "^9.31.0",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-lit-a11y": "^5.1.0",
    "eslint-plugin-wc": "^3.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.0.4"
  },
  "dependencies": {
    "@effect/platform": "^0.87.12",
    "@effect/platform-browser": "^0.67.12",
    "@effect/platform-bun": "^0.72.17",
    "@effect/rpc": "^0.64.13",
    "@preact/signals-core": "^1.11.0",
    "dotenv": "^17.2.0",
    "effect": "^3.16.12",
    "kanel": "^3.14.1",
    "kanel-kysely": "^0.7.1",
    "kysely": "^0.28.2",
    "lit": "^3.3.1",
    "oslo": "^1.2.1",
    "pg": "^8.16.3"
  }
}
